<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.edcan.hospital">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_widNoActionbar">
        <activity android:name=".activity.MainActivity"></activity>
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme_widNoActionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TutorialActivity"
            android:theme="@style/AppTheme_widNoActionbar">

        </activity>
        <activity android:name=".activity.Settings" />
        <activity
            android:name=".activity.HospitalInfoViewActivity"
            android:theme="@style/SubAppThene"></activity>
        <activity
            android:name=".activity.AnimalAddEditActivity"
            android:theme="@style/SubAppThene"></activity>
        <activity
            android:name=".activity.SetMedicineActivity"
            android:theme="@style/SubAppThene"></activity>
        <activity
            android:name=".activity.SetHospitalActivity"
            android:theme="@style/SubAppThene"></activity>
    </application>

</manifest>
